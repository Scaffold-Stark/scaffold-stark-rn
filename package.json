{
  "name": "ss-rn",
  "version": "0.0.1",
  "author": "Q3 Labs",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/snfoundry",
      "packages/rn"
    ]
  },
  "overrides": {
    "chalk": "5.3.0",
    "strip-ansi": "7.1.0",
    "color-convert": "2.0.1",
    "color-name": "1.1.4",
    "is-core-module": "2.13.1",
    "error-ex": "1.3.2",
    "has-ansi": "5.0.1"
  },
  "scripts": {
    "chain": "yarn workspace @ss-rn/snfoundry chain",
    "deploy": "yarn workspace @ss-rn/snfoundry deploy",
    "deploy:clear": "yarn workspace @ss-rn/snfoundry deploy:clear",
    "deploy:no-reset": "yarn workspace @ss-rn/snfoundry deploy --no-reset",
    "verify": "yarn workspace @ss-rn/snfoundry verify",
    "test": "yarn workspace @ss-rn/snfoundry test",
    "compile": "yarn workspace @ss-rn/snfoundry compile",
    "format": "yarn workspace @ss-rn/snfoundry format",
    "format:check": "yarn workspace @ss-rn/snfoundry format:check",
    "start": "yarn workspace @ss-rn/rn start",
    "start:ios": "yarn workspace @ss-rn/rn start --ios",
    "prepare": "husky",
    "postinstall": "yarn workspace @ss-rn/rn postinstall && yarn workspace @ss-rn/snfoundry postinstall",
    "clean": "yarn workspace @ss-rn/snfoundry clean"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  },
  "resolutions": {
    "@noble/hashes": "1.8.0"
  }
}
